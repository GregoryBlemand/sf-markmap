{% extends 'base.html.twig' %}

{% block title %}{{ currentMap.title }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col">
                <div class="col-xl-6 offset-xl-3">
                    <input type="hidden" name="pageId" id="pageId" value="{{ currentMap.id }}">
                    <input type="text" class="form-control form-control-lg page-title" id="page-title" placeholder="Sans titre" value="{{ currentMap.title }}" aria-label="Titre">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mt-3"><textarea name="editor" id="editor" style="height: 80vh;width: 100%;">{{ currentMap.content }}</textarea></div>
            </div>
            <div class="col mt-3">
                <svg id="svg" className="flex-1" width="100%" height="100vh" />
            </div>
        </div>

        <div class="list-group context-menu">
            <button class="list-group-item list-group-item-action btn-delete-page">Supprimer</button>
        </div>
    </div>
{% endblock %}
